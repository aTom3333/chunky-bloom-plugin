<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.*?>
<?import se.llbit.chunky.ui.IntegerAdjuster?>
<?import se.llbit.chunky.ui.DoubleAdjuster?>
<?import javafx.scene.control.CheckBox?>
<fx:root type="javafx.scene.control.ScrollPane" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <content>
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <TitledPane animated="false" prefWidth="430.0" text="Bloom Options">
                    <content>
                        <AnchorPane>
                            <children>
                                <VBox alignment="CENTER_LEFT" prefHeight="52.0" spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <children>
                                        <IntegerAdjuster fx:id="bloom_blurRadius" alignment="CENTER_LEFT" prefHeight="26.0" prefWidth="95.0" />
                                        <DoubleAdjuster fx:id="bloom_threshold" alignment="CENTER_LEFT" prefHeight="26.0"
                                                         prefWidth="95.0"/>
                                        <IntegerAdjuster fx:id="bloom_downsamplingRatio" alignment="CENTER_LEFT" prefHeight="26.0" prefWidth="95.0" />
                                        <CheckBox fx:id="bloom_highlightOnly" text="Show highlights only"/>
                                    </children>
                                    <padding>
                                        <Insets top="5.0" />
                                    </padding>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </TitledPane>
            </children>
        </VBox>
    </content>
</fx:root>
